<form action="/session/create" method="POST" class="form-signin">
  <h2 class="form-signin-heading">Please sign in..</h2>

  <% if(flash && flash.err) { %>
    <ul class="alert alert-success">
      <% Object.keys(flash.err).forEach(function(error) { %>
        <li><%= JSON.stringify(flash.err[error]) %></li>
      <% }) %>
    </ul>
  <% } %>

  <input class="form-control" type="text" placeholder="Email address" name="emailAddress"/>
  <input class="form-control" type="password" placeholder="Password" name="password"/>
  <input class="btn btn-lg btn-primary btn-block" value="Acceder" type="submit" />
  <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
  <br/>
  <a class="btn btn-lg btn-default btn-block" href="/user/new">Crear cuenta</a>
</form>
