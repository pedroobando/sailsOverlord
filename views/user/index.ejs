<div class="lista-usuarios">
  <h3>Usuarios</h3>
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Title</th>
      <th>User Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% _.each(users, function(user) { %>
      <tr data-id="<%= user.id %>" data-model="user">
        <td><%= user.id %></td>
        <td><%= user.firstName %></td>
        <td><%= user.title %></td>
        <td><%= user.userName %></td>
        <td><%= user.emailAddress %></td>
        <td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Ver</a></td>
        <td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Cambiar</a></td>
        <td><a href="/user/destroy/<%= user.id %>" class="btn btn-sm btn-danger">Borrar</a></td>
      </tr>
    <% }) %>

  </table>

</div>
