<form id="sign-up-form" class="form-signin" method="POST" action="/user/update/<%=user.id%>">
  <h2>Edici√≥n de Usuario</h2>

  <% if(flash && flash.err) { %>
    <ul class="alert alert-success">
      <% Object.keys(flash.err).forEach(function(error){ %>
      <li><%= JSON.stringify(flash.err[error]) %></li>
      <% }) %>
    </ul>
  <% } %>

  <input class="form-control" value="<%= user.firstName %>" name="firstName" type="text"/>
  <input class="form-control" value="<%= user.title %>" name="title" type="text"/>
  <input class="form-control" value="<%= user.userName %>" name="userName" type="text"/>
  <input class="form-control" value="<%= user.emailAddress %>" name="emailAddress" type="text"/>
  <% if (session.authenticated && session.User.admin) { %>
    <% if(user.admin) { %>
      <input type="hidden" name="admin" value="unchecked">
      <label class="checkbox"><input type="checkbox" name="admin" checked>&nbsp;Admin</label>
    <% } else { %>
      <input type="hidden" name="admin" value="checked">
      <label class="checkbox"><input type="checkbox" name="admin">&nbsp;Admin</label>
    <% } %>
  <% } %>
  <input class="btn btn-lg btn-primary btn-block" type="submit" value="Proceed" />
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />

</form>
